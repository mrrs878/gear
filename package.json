{
  "name": "gear",
  "private": true,
  "scripts": {
    "clean": "rimraf packages/*/{lib,dist,tsconfig.tsbuildinfo}",
    "build": "tsc --build && node scripts/process.mjs && rollup -c",
    "build:ci": "cross-env UMD=1 npm run build",
    "dev": "run-p dev:bundle dev:tsc dev:process",
    "dev:bundle": "rollup -cw",
    "dev:tsc": "tsc --build --watch",
    "dev:process": "node scripts/process.mjs --watch",
    "test": "BABEL_ENV=test jest",
    "test:watch": "BABEL_ENV=test npm run test -- --watch",
    "postinstall": "node scripts/postinstall.mjs",
    "pub": "npm run clean && npm run build:ci && lerna publish --yes",
    "lint": "prettier --plugin-search-dir=. --ignore-path=.gitignore --list-different **/*.{ts,tsx,js,svelte}",
    "lint:fix": "prettier --plugin-search-dir=. --ignore-path=.gitignore --write **/*.{ts,tsx,js,svelte}"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@icon-park/svg": "^1.3.3",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.2",
    "@rollup/plugin-replace": "^2.4.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.172",
    "@types/react": "^17.0.18",
    "@types/react-dom": "^17.0.9",
    "chokidar": "^3.5.2",
    "cross-env": "^7.0.3",
    "fs-extra": "^10.0.0",
    "glob": "^7.1.7",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "lodash": "^4.17.21",
    "mustache": "^4.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.53.2",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^5.5.2",
    "svgo": "^2.3.1",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "bundlewatch": {
    "files": [
      {
        "path": "packages/*/dist/index.min.js"
      }
    ],
    "ci": {
      "repoBranchBase": "main",
      "trackBranches": [
        "main"
      ]
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "publishConfig": {
    "access": "public"
  }
}
